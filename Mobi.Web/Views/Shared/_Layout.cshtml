@{
    var languageCookie = HttpContextAccessor.HttpContext?.Request.Cookies["language"];
    var currentLanguage = languageCookie ?? "1"; // Default to English
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@T("Mobi.Layout.Title")</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content="ColorlibHQ" />
    <meta name="description" content="@T("Mobi.Layout.Description")" />
    <meta name="keywords" content="bootstrap, dashboard, admin panel" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fontsource/source-sans-3@5.0.12/index.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.3.0/styles/overlayscrollbars.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="../../dist/css/adminlte.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="~/datatables/dataTables.bootstrap5.min.css" />
    <script src="~/datatables/jquery-3.6.0.min.js"></script>
    <script src="~/datatables/jquery.dataTables.min.js"></script>
    <script src="~/datatables/dataTables.bootstrap5.min.js"></script>
    @RenderSection("Scripts", required: false)
</head>

<body class="layout-fixed sidebar-mini bg-body-tertiary hold-transition">
    <div class="app-wrapper">
        <nav class="app-header navbar navbar-expand bg-body">
            <div class="container-fluid">
                <ul class="navbar-nav"></ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-lte-toggle="fullscreen">
                            <i data-lte-icon="maximize" class="bi bi-arrows-fullscreen"></i>
                            <i data-lte-icon="minimize" class="bi bi-fullscreen-exit" style="display: none;"></i>
                        </a>
                    </li>
                    <li class="nav-item dropdown user-menu">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <img src="../../dist/assets/img/user2-160x160.jpg" class="user-image rounded-circle shadow" alt="User Image">
                            <span class="d-none d-md-inline">@User.Identity.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end">
                            <li class="user-header text-bg-primary">
                                <img src="../../dist/assets/img/user2-160x160.jpg" class="rounded-circle shadow" alt="User Image">
                                <p>@User.Identity.Name</p>
                            </li>
                            <li class="user-body">
                                <div class="row">
                                    <select class="btn btn-primary dropdown-toggle" id="language-switcher" onchange="changeLanguage()">
                                        <option value="1" selected="@(currentLanguage == "1" ? "selected" : null)">@T("Mobi.Layout.Language.English")</option>
                                        <option value="2" selected="@(currentLanguage == "2" ? "selected" : null)">@T("Mobi.Layout.Language.Arabic")</option>
                                    </select>
                                </div>
                            </li>
                            <li class="user-footer">
                                <a href="/systemusers/changepassword" class="btn btn-default btn-flat">@T("Mobi.Layout.ChangePassword")</a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                        <button class="btn btn-default btn-flat float-end" type="submit">@T("Mobi.Layout.SignOut")</button>
                                    </form>
                                }
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>

        <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
            <div class="sidebar-brand">
                <a href="/" class="brand-link">
                    <img src="../../uploads/log_mobi.png" alt="Logo" class="brand-image opacity-75 shadow">
                    <span class="brand-text fw-light"></span>
                </a>
            </div>
            <div class="sidebar-wrapper">
                <nav class="mt-2">
                    <ul class="nav sidebar-menu nav-sidebar flex-column" data-lte-toggle="treeview" role="menu">
                        <li class="nav-item"><a href="/" class="nav-link"><i class="nav-icon fas fa-home"></i><p>@T("Mobi.Layout.Menu.Dashboard")</p></a></li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link"><i class="nav-icon fas fa-edit"></i><p>@T("Mobi.Layout.Menu.BasicData")<i class="nav-arrow bi bi-chevron-right"></i></p></a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item"><a class="nav-link" href="/location/List"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.Locations")</p></a></li>
                                <li class="nav-item"><a class="nav-link" href="/employee/List"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.Employees")</p></a></li>
                            </ul>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link"><i class="fa-solid fa-bars-progress"></i><p>@T("Mobi.Layout.Menu.Manage")<i class="nav-arrow bi bi-chevron-right"></i></p></a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item"><a href="/mobilemanage/mobilemanage" class="nav-link"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.EmployeeMobile")</p></a></li>
                                <li class="nav-item"><a href="/employeelocation/employeelocation" class="nav-link"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.EmployeeLocations")</p></a></li>
                                <li class="nav-item"><a href="/employeeattendance/logs" class="nav-link"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.Attendance")</p></a></li>
                            </ul>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link"><i class="fa-solid fa-universal-access"></i><p>@T("Mobi.Layout.Menu.Permissions")<i class="nav-arrow bi bi-chevron-right"></i></p></a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item"><a href="/systemusers/index" class="nav-link"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.SystemUsers")</p></a></li>
                            </ul>
                        </li>

                        <li class="nav-item has-treeview">
                            <a href="#" class="nav-link"><i class="nav-icon fas fa-chart-pie"></i><p>@T("Mobi.Layout.Menu.Reports")<i class="nav-arrow bi bi-chevron-right"></i></p></a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item"><a href="/reports/dailyattendancereport" class="nav-link"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.DailyAttendanceReport")</p></a></li>
                                <li class="nav-item"><a href="/reports/employeedata" class="nav-link"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.EmployeeDataReport")</p></a></li>
                                <li class="nav-item"><a href="/reports/registeredphones" class="nav-link"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.RegisteredPhones")</p></a></li>
                                <li class="nav-item"><a href="/reports/monthlyworkinghours" class="nav-link"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.MonthlyWorkingHours")</p></a></li>
                                <li class="nav-item"><a href="/reports/dailyworkinghours" class="nav-link"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.DailyWorkingHours")</p></a></li>
                                <li class="nav-item"><a href="/reports/employeelocationauthorityreport" class="nav-link"><i class="nav-icon bi bi-circle"></i><p>@T("Mobi.Layout.Menu.EmployeeLocationAuthorityReport")</p></a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <main class="app-main">
            <div id="notificationContainer" class="notification-container" style="display: none;">
                <div id="notificationMessage" class="alert alert-success alert-dismissible fade show" role="alert">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert" id="successAlert">
                    @successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert" id="errorAlert">
                    @errorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>

        <footer class="app-footer">
            <div class="float-end d-none d-sm-inline"></div>
            <strong>© @DateTime.Now.Year <a href="#" class="text-decoration-none">Mobi</a>.</strong> @T("Mobi.Layout.AllRightsReserved")
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.3.0/browser/overlayscrollbars.browser.es6.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" crossorigin="anonymous"></script>
    <script src="../../dist/js/adminlte.js"></script>

    <script>
        document.getElementById('language-switcher').addEventListener('change', function () {
            fetch('/Language/SetLanguage', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(this.value)
            }).then(res => res.ok && location.reload())
              .catch(error => alert('Error changing language: ' + error));
        });

        function closeAlert(id) {
            const el = document.getElementById(id);
            if (el) {
                setTimeout(() => {
                    el.classList.add("fade");
                    setTimeout(() => el.remove(), 500);
                }, 4000);
            }
        }

        closeAlert("successAlert");
        closeAlert("errorAlert");
    </script>
</body>
</html>
