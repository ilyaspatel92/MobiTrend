@model RegisterModel

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-warning text-white">
            <h3 class="card-title mb-0">Edit System User</h3>
        </div>
        <div class="card-body">
            @if (ViewData.ModelState != null && !ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <ul>
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                </div>
            }

            <form asp-action="Edit" method="post">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="EmployeeName" class="form-label">Employee Name</label>
                        <input asp-for="EmployeeName" class="form-control" />
                        <span asp-validation-for="EmployeeName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="UserName" class="form-label">User Name</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="CompanyID" class="form-label">Company ID</label>
                        <input asp-for="CompanyID" class="form-control" type="number" />
                        <span asp-validation-for="CompanyID" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="UserStatus" class="form-label">User Status</label>
                        <select asp-for="UserStatus" class="form-control">
                            <option value="true" selected="@(Model.UserStatus ? "selected" : null)">Active</option>
                            <option value="false" selected="@(Model.UserStatus ? null : "selected")">Inactive</option>
                        </select>
                        <span asp-validation-for="UserStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-warning">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
