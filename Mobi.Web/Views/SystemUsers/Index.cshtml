@model PaginatedList<SystemUsers>

@{
    ViewData["Title"] = "System Users";
}

<div class="container mt-4">
    <h1>System Users</h1>
    <form method="get" action="@Url.Action("Index", "SystemUsers")">
        <div class="row">
            <div class="col-md-3">
                <label>Employee Name</label>
                <input type="text" name="employeeName" class="form-control" value="@ViewData["EmployeeName"]">
            </div>
            <div class="col-md-3">
                <label>User Name</label>
                <input type="text" name="userName" class="form-control" value="@ViewData["UserName"]">
            </div>
            <div class="col-md-3">
                <label>User Status</label>
                <select name="userStatus" class="form-control">
                    <option value="" selected="@(ViewData["UserStatus"]?.ToString() == "" ? "selected" : null)">All</option>
                    <option value="true" selected="@(ViewData["UserStatus"]?.ToString() == "True" ? "selected" : null)">Active</option>
                    <option value="false" selected="@(ViewData["UserStatus"]?.ToString() == "False" ? "selected" : null)">Inactive</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button class="btn btn-primary">Search</button>
                <a href="@Url.Action("Create", "SystemUsers")" class="btn btn-success ml-2">Add</a>
            </div>
        </div>
    </form>

    <table class="table table-bordered mt-3 text-center">
        <thead class="table-light">
            <tr>
                <th>No</th>
                <th>Employee Name</th>
                <th>ID</th>
                <th>User Name</th>
                <th>User Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items.Any())
            {
                foreach (var user in Model.Items)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.EmployeeName</td>
                        <td>@user.CompanyID</td>
                        <td>@user.UserName</td>
                        <td>@(user.UserStatus ? "Active" : "Inactive")</td>
                        <td>
                            <a href="@Url.Action("Edit", "SystemUsers", new { id = user.Id })" class="btn btn-sm btn-warning">Edit</a>
                            <form method="post" action="@Url.Action("Delete", "SystemUsers")" class="d-inline">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">No records found</td>
                </tr>
            }
        </tbody>
    </table>

    <nav>
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "SystemUsers", new { page = i })">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>
