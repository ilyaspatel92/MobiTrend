@model Mobi.Web.Models.Employees.EmployeeModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<div class="alert alert-danger">
    <strong>Warning:</strong> You are about to delete this employee. This action cannot be undone.
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Name (English):</dt>
            <dd class="col-sm-9">@Model.NameEng</dd>

            <dt class="col-sm-3">Name (Arabic):</dt>
            <dd class="col-sm-9">@Model.NameArabic</dd>

            <dt class="col-sm-3">Mobile Number:</dt>
            <dd class="col-sm-9">@Model.MobileNumber</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
    <a asp-action="List" class="btn btn-secondary mt-3">Cancel</a>
</form>
