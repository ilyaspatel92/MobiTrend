@model Mobi.Web.Models.Employees.EmployeeModel

@{
    ViewData["Title"] = @T("Mobi.Employee.Delete.Title");
}

<h2>@T("Mobi.Employee.Delete.Title")</h2>

<div class="alert alert-danger">
    <strong>@T("Mobi.Employee.Delete.WarningTitle")</strong> @T("Mobi.Employee.Delete.WarningMessage")
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@T("Mobi.Employee.Delete.Label.Id")</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">@T("Mobi.Employee.Delete.Label.NameEnglish")</dt>
            <dd class="col-sm-9">@Model.NameEng</dd>

            <dt class="col-sm-3">@T("Mobi.Employee.Delete.Label.NameArabic")</dt>
            <dd class="col-sm-9">@Model.NameArabic</dd>

            <dt class="col-sm-3">@T("Mobi.Employee.Delete.Label.MobileNumber")</dt>
            <dd class="col-sm-9">@Model.MobileNumber</dd>

            <dt class="col-sm-3">@T("Mobi.Employee.Delete.Label.Email")</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">@T("Mobi.Employee.Delete.ConfirmButton")</button>
    <a asp-action="List" class="btn btn-secondary mt-3">@T("Mobi.Employee.Delete.CancelButton")</a>
</form>
