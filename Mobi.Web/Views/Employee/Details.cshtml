@model Mobi.Web.Models.Employees.EmployeeModel

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <!-- Title Section -->
        <h2 class="mb-0">Employee Details</h2>
        <div class="btn-group">
            <div class="d-flex justify-content-end mt-4">
                <a asp-action="List" class="btn btn-secondary btn-sm me-2">Back to List</a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-sm">Delete</a>
            </div>
        </div>
    </div>

    <!-- Card for Employee Information -->
    <div class="card card-outline card-info">
        <div class="card-body">
            <!-- Employee Information -->
            <dl class="row">
                @* <dt class="col-sm-3">ID:</dt>
                <dd class="col-sm-9">@Model.Id</dd> *@

                <dt class="col-sm-3">Name (English):</dt>
                <dd class="col-sm-9">@Model.NameEng</dd>

                <dt class="col-sm-3">Name (Arabic):</dt>
                <dd class="col-sm-9">@Model.NameArabic</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">@(Model.Status ? "Active" : "Inactive")</dd>

                <dt class="col-sm-3">File Number:</dt>
                <dd class="col-sm-9">@Model.FileNumber</dd>

                <dt class="col-sm-3">Mobile Number:</dt>
                <dd class="col-sm-9">@Model.MobileNumber</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Company ID:</dt>
                <dd class="col-sm-9">@Model.CompanyId</dd>
            </dl>
        </div>
    </div>
</div>
