@{
    Layout = null;
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>MOBI | Reset Password</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha256-rd8ZEFV0I8hvUPhNF4GiRbH1pldQetgKXWQ7dtyx6tk=" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.css">
    <style>
        .login-page {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #f4f6f9;
        }

        .card {
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .input-group-text {
            cursor: pointer;
        }
    </style>
</head>
<body class="login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>Admin</b>Mobi</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Please enter and confirm your new password.</p>
                <form asp-action="ResetPassword" method="post">
                    <input type="hidden" name="token" value="@ViewBag.Token" />
                    <input type="hidden" name="email" value="@ViewBag.Email" />

                    <div class="input-group mb-3">
                        <input type="password" id="newPassword" class="form-control" name="newPassword" placeholder="New Password" required>
                        <div class="input-group-text" onclick="togglePassword('newPassword', this)">
                            <span class="bi bi-eye"></span>
                        </div>
                    </div>

                    <div class="input-group mb-3">
                        <input type="password" id="confirmPassword" class="form-control" name="confirmPassword" placeholder="Confirm Password" required>
                        <div class="input-group-text" onclick="togglePassword('confirmPassword', this)">
                            <span class="bi bi-eye"></span>
                        </div>
                    </div>

                    <div class="text-danger mb-3" id="error-message" style="display: none;">
                        Passwords do not match!
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Login" class="text-primary">Back to Login</a>
                        <button type="submit" class="btn btn-primary" onclick="return validatePasswords()">Reset Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha256-YMa+wAM6QkVyz999odX7lPRxkoYAan8suedu4k2Zur8=" crossorigin="anonymous"></script>
    <script src="~/dist/js/adminlte.js"></script>
    <script>
        // Toggle password visibility
        function togglePassword(fieldId, iconElement) {
            const field = document.getElementById(fieldId);
            const icon = iconElement.querySelector("span");
            if (field.type === "password") {
                field.type = "text";
                icon.classList.remove("bi-eye");
                icon.classList.add("bi-eye-slash");
            } else {
                field.type = "password";
                icon.classList.remove("bi-eye-slash");
                icon.classList.add("bi-eye");
            }
        }

        // Validate passwords match
        function validatePasswords() {
            const newPassword = document.getElementById("newPassword").value;
            const confirmPassword = document.getElementById("confirmPassword").value;
            const errorMessage = document.getElementById("error-message");

            if (newPassword !== confirmPassword) {
                errorMessage.style.display = "block";
                return false;
            } else {
                errorMessage.style.display = "none";
                return true;
            }
        }
    </script>
</body>
</html>
