@{
    Layout = null;
    ViewData["Title"] = "Forgot Password Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>AdminLTE 4 | Forgot Password Confirmation</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha256-rd8ZEFV0I8hvUPhNF4GiRbH1pldQetgKXWQ7dtyx6tk=" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.css">
    <style>
        .confirmation-page {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #f4f6f9;
        }

        .card {
            border-radius: 8px;
            padding: 30px;
            text-align: center;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

            .card h2 {
                margin-bottom: 20px;
                font-weight: bold;
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-link {
            color: #007bff;
        }

            .btn-link:hover {
                color: #0056b3;
            }
    </style>
</head>
<body class="confirmation-page">
    <div class="card">
        <h2>Forgot Password</h2>
        <p class="mb-4">@ViewBag.Message</p>
        <a href="/Account/Login" class="btn btn-primary">Back to Login</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha256-YMa+wAM6QkVyz999odX7lPRxkoYAan8suedu4k2Zur8=" crossorigin="anonymous"></script>
    <script src="~/dist/js/adminlte.js"></script>
</body>
</html>
