@{
    Layout = null;
    ViewData["Title"] = @T("Mobi.Account.ForgotPassword.Title");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>@T("Mobi.Account.ForgotPassword.PageTitle")</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha256-rd8ZEFV0I8hvUPhNF4GiRbH1pldQetgKXWQ7dtyx6tk=" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/dist/css/adminlte.css">
    <style>
        .login-page {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #f4f6f9;
        }

        .card {
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }
    </style>
</head>
<body class="login-page">
    <div class="forgot-box">
        <div class="login-logo">
            <a href="#"><b>@T("Mobi.Account.ForgotPassword.Admin")</b>@T("Mobi.Account.ForgotPassword.Mobi")</a>
        </div>
        <div class="card">
            <div class="card-body forgot-box-body">
                <p class="forgot-box-msg">@T("Mobi.Account.ForgotPassword.Message")</p>
                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" name="email" placeholder="@T("Mobi.Account.ForgotPassword.Placeholder.Email")" required>
                        <div class="input-group-text">
                            <span class="bi bi-envelope"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Login" class="text-primary">@T("Mobi.Account.ForgotPassword.BackToLogin")</a>
                        <button type="submit" class="btn btn-primary">@T("Mobi.Account.ForgotPassword.Submit")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha256-YMa+wAM6QkVyz999odX7lPRxkoYAan8suedu4k2Zur8=" crossorigin="anonymous"></script>
    <script src="~/dist/js/adminlte.js"></script>
</body>
</html>
