@model Mobi.Web.Models.Locations.LocationModel

<h2>@T("Mobi.Location.DeleteTitle")</h2>
<p>@T("Mobi.Location.DeleteConfirmation")</p>

<div>
    <strong>@Model.LocationNameEnglish</strong>
</div>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">@T("Mobi.Location.DeleteButton")</button>
    <a asp-action="List" class="btn btn-secondary">@T("Mobi.Location.CancelButton")</a>
</form>
