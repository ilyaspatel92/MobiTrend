@model PaginatedList<EmployeeModel>

@{
    ViewData["Title"] = "Mobile Manage";
}
<div class="card card-info card-outline mb-4 mx-3 custom-top-spacing">
    <div class="card-header">
        <h3 class="card-title">Mobile Manage</h3>
    </div>
    <div class="card-body">
        <form id="searchForm" method="get" action="@Url.Action("MobileManage", "MobileManage")">
            <div class="row mb-4">
                <div class="col-md-4">
                    <label for="employeeName" class="form-label">Employee Name</label>
                    <input type="text" name="name" id="employeeName" class="form-control" placeholder="Search by name" value="@ViewData["Name"]">
                </div>
                <div class="col-md-2">
                    <label for="filenumber" class="form-label">File Number</label>
                    <input type="text" name="filenumber" id="filenumber" class="form-control" placeholder="Search by file number" value="@ViewData["FileNumber"]">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </div>
        </form>

        <table class="table table-bordered text-center">
            <thead class="table-light">
                <tr>
                    <th>No</th>
                    <th>Employee Name</th>
                    <th>File Number</th>
                    <th>Mobile Type</th>
                    <th>Reg Date</th>
                    <th>Reg Via</th>
                    <th>Admin</th>
                    <th>Reg Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null && Model.Items.Any())
                {
                    foreach (var employee in Model.Items)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.NameEng</td>
                            <td>@employee.FileNumber</td>
                            <td>@Enum.GetName(typeof(MobileType), employee.MobileType)</td>
                            <td>@employee.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>@Enum.GetName(typeof(RegistrationType), employee.RegistrationVia)</td>
                            <td>@employee.UserName</td>
                            <td>@(employee.RegisterStatus ? "Registered" : "Not Registered")</td>
                            <td>
                                @if (!employee.IsQrVerify)
                                {
                                    <a href="@Url.Action("RegisterMobile", "MobileManage", new { id = employee.Id })" class="btn btn-link">Register</a>
                                }
                                else
                                {
                                    <a href="@Url.Action("EditMobile", "MobileManage", new { id = employee.Id })" class="btn btn-link">Edit</a>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center">No Records Found</td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination Section -->
        <div class="card-footer">
            <nav aria-label="Pagination">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("MobileManage", "MobileManage", new { page = i, name = ViewData["Name"], id = ViewData["Id"] })">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>
