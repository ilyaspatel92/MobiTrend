@model int // Employee ID passed to the view

<div class="container mt-5 text-center" style="font-family: Arial, sans-serif;">
    <h4 class="mb-4">@T("Mobi.MobileQR.Title")</h4>

    <form method="post" asp-action="EditMobile">
        <input type="hidden" name="id" value="@Model" />

        <div class="d-grid gap-3" style="max-width: 300px; margin: 0 auto;">
            <button type="submit" name="action" value="register" class="btn btn-success"
                    style="border-radius: 8px; padding: 10px 20px; font-size: 16px;"
                    onclick="return confirm('@T("Mobi.MobileQR.ConfirmRegister")');">
                @T("Mobi.MobileQR.RegisterButton")
            </button>

            <button type="submit" name="action" value="remove" class="btn btn-danger"
                    style="border-radius: 8px; padding: 10px 20px; font-size: 16px;"
                    onclick="return confirm('@T("Mobi.MobileQR.ConfirmRemove")');">
                @T("Mobi.MobileQR.RemoveButton")
            </button>

            <a href="@Url.Action("MobileManage")" class="btn btn-light"
               style="border: 1px solid #e0e0e0; color: #6c757d; border-radius: 8px; padding: 10px 20px; font-size: 16px;">
                @T("Mobi.MobileQR.CancelButton")
            </a>
        </div>
    </form>
</div>
