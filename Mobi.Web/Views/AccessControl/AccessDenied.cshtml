@{
    ViewData["Title"] = @T("Mobi.AccessDenied.Title");
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3 class="card-title mb-0">@T("Mobi.AccessDenied.CardTitle")</h3>
        </div>
        <div class="card-body">
            <!-- Access Denied Message -->
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">@T("Mobi.AccessDenied.AlertHeading")</h4>
                <p>@T("Mobi.AccessDenied.AlertMessage1")</p>
                <hr>
                <p class="mb-0">
                    @T("Mobi.AccessDenied.AlertMessage2")
                </p>
            </div>

            <!-- Button to navigate back -->
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Home")" class="btn btn-primary">@T("Mobi.AccessDenied.GoHomeButton")</a>
                <a href="javascript:history.back()" class="btn btn-secondary">@T("Mobi.AccessDenied.GoBackButton")</a>
            </div>
        </div>
    </div>
</div>
